{
  "name": "certificates.orders.web.ch.gov.uk",
  "version": "1.0.0",
  "description": "Certificate ordering web service integrating with the CH orders service.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/bin/www.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc && cp -r src/views dist/ && gulp static",
    "lint": "eslint 'src/*.ts' 'src/**/*.ts' './test/*.ts' './test/**/*.ts'",
    "lint:fix": "eslint 'src/*.ts' 'src/**/*.ts' './test/*.ts' './test/**/*.ts' --fix",
    "test": "DYNAMIC_LP_CERTIFICATE_ORDERS_ENABLED=true DYNAMIC_LLP_CERTIFICATE_ORDERS_ENABLED=true mocha test",
    "test:coverage": "nyc npm test",
    "analyse-code": "sonar-scanner",
    "chs-dev": "nodemon --legacy-watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@companieshouse/api-sdk-node": "^2.0.146",
    "@companieshouse/node-session-handler": "^5.0.1",
    "@companieshouse/structured-logging-node": "^2.0.1",
    "@companieshouse/web-security-node": "^4.1.1",
    "cookie-parser": "^1.4.7",
    "escape-html": "^1.0.3",
    "express": "~4.18.2",
    "express-actuator": "^1.8.4",
    "express-validator": "^7.0.1",
    "govuk-frontend": "^4.7.0",
    "http-errors": "~2.0.0",
    "ioredis": "~5.3.2",
    "js-yaml": "^4.1.0",
    "n": "^9.1.0",
    "nunjucks": "~3.2.4",
    "nyc": "^15.1.0",
    "yargs": "~17.7.2"
  },
  "devDependencies": {
    "@types/chai": "~4.3.5",
    "@types/chai-as-promised": "~7.1.5",
    "@types/cheerio": "~0.22.31",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "~4.17.17",
    "@types/express-actuator": "^1.8.0",
    "@types/http-errors": "~2.0.1",
    "@types/ioredis": "~4.14.8",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "~7.0.2",
    "@types/node": "~12.7.8",
    "@types/nunjucks": "~3.1.2",
    "@types/proxyquire": "~1.3.28",
    "@types/sinon": "~9.0.4",
    "@types/sinon-chai": "~3.2.9",
    "@typescript-eslint/eslint-plugin": "2.29.0",
    "@typescript-eslint/parser": "2.29.0",
    "chai": "~4.2.0",
    "chai-as-promised": "~7.1.1",
    "chai-http": "~4.3.0",
    "cheerio": "~1.0.0-rc.12",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "gulp": "^5.0.0",
    "gulp-sass": "^5.1.0",
    "mocha": "^10.8.2",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "proxyquire": "~2.1.3",
    "sass": "1.32.13",
    "sinon": "~9.0.2",
    "sinon-chai": "~3.5.0",
    "sonarqube-scanner": "^2.8.1",
    "ts-node": "~8.8.2",
    "typescript": "~5.1.6"
  },
  "@comments devDependencies": {
    "@package sass": [
      "We're using an older version of @sass to suppress deprecation warnings thrown by the @govuk-frontend package during the build",
      "We'll upgrade to the most recent version of @sass after this issue is fixed in the @govuk-frontend package"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts,json,html,njk",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/bin/www.ts"
  },
  "overrides": {
    "cookie": "0.6.0",
    "micromatch": "4.0.8",
    "body-parser": "1.20.3",
    "braces": "3.0.3",
    "chokidar": "4.0.1",
    "glob-stream": "8.0.0",
    "semver": "7.5.4",
    "simple-update-notifier": "2.0.0"
  }
}
