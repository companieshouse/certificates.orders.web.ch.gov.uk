{
  "name": "web-starter-nodejs",
  "version": "1.0.0",
  "description": "A starter web application",
  "main": "index.js",
  "scripts": {
    "start": "node dist/bin/www.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc && cp -r src/views dist/ && gulp static",
    "lint": "tslint -p .",
    "test": "jest -c src/test/jest.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ch-node-session-handler": "git+ssh://git@github.com/companieshouse/node-session-handler.git#d34e1a1618cf096cdc10e56dcd06bbc974679da4",
    "cookie-parser": "^1.4.4",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "govuk-frontend": "^3.2.0",
    "ioredis": "^4.16.0",
    "ioredis-mock": "^4.19.0",
    "nunjucks": "^3.2.0",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.1",
    "@types/ioredis": "^4.14.8",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@types/nunjucks": "^3.1.2",
    "@types/supertest": "^2.0.8",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.0.2",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "npm": "^6.14.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/bin/www.ts"
  }
}
