{
  "name": "web-starter-nodejs",
  "version": "1.0.0",
  "description": "A starter web application",
  "main": "index.js",
  "scripts": {
    "start": "node dist/bin/www.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc && cp -r src/views dist/ && gulp static",
    "lint": "tslint -p .",
    "test": "jest -c src/test/jest.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "govuk-frontend": "^3.2.0",
    "nunjucks": "^3.2.0",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@types/nunjucks": "^3.1.2",
    "@types/supertest": "^2.0.8",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.0.2",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/bin/www.ts"
  }
}
